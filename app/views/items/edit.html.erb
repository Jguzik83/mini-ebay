<h1>Lets edit this item</h1>
<div id='edit_form'>
  <%= form_for [@user, @item] do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :start %>
      <%= f.date_field :start %>
    </div>
    <div>
      <%= f.label :end %>
      <%= f.date_field :end %>
    </div>
    <div>
      <%= f.submit 'Edit Item' %>
    </div>
  <% end %>
</div>