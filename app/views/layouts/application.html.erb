<!DOCTYPE html>
<html>
<head>
  <title>Auction</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id='nav_bar'>
  <%= button_to 'Home', root_path, method: :get %>
  <% if logged_in? %>
    <%= button_to 'Profile', user_path(id: session[:user_id]), method: :get %>
    <%= button_to 'Log Out', session_path(id: session[:user_id]), method: :delete %>
  <% else %>
    <%= button_to 'Log In', new_session_path, method: :get %>
    <%= button_to 'Sign Up', new_user_path, method: :get %>
  <% end %>
</div>


<%= yield %>

</body>
</html>
