<h1>Create New Account</h1>

  <% if flash[:errors] %>
    <div id='error_box'>
      <% flash[:errors].each do |error| %>
        <div id='error_message'><%= error %></div>
      <%end%>
    </div>
  <% end %>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit 'Sign Up' %>
<% end %>